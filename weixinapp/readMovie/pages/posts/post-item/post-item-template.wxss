.post-container{
    display: flex;
    flex-direction: column;
    margin-top:20rpx;
    margin-bottom: 40rpx;
    background-color: #ffffff;
    border-bottom: 1px solid #ededed;
    border-top:1px solid #ededed;
    padding-bottom: 5px;
}
.post-author-date{
    margin:10rpx 0 20rpx 12rpx;
}
.post-author{
    width: 60rpx;
    height:60rpx;
    vertical-align: middle;
    border-radius: 50%;
}
.post-date{
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 10px;
    font-size: 26rpx;
}
.post-title{
    font-size: 36rpx;
    font-weight: 600;
    color:#333;
    margin-bottom:10px;
    margin-left: 10px;
}
.post-image{
    margin-left:16px;
    width:100%;
    height:340rpx;
    margin:auto 0;
    margin-bottom: 15px;
}
.post-content{
    color:#666;
    font-size:28rpx;
    margin-bottom:20rpx;
    margin-left:20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}
.post-like{
    font-size: 13rpx;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
}
.post-like-image{
    height: 16px;
    width: 16px;
    border-radius: 50%;
    margin-right:8px;
    vertical-align: middle;
    border:solid 1px steelblue;
}
.post-like-font{
    vertical-align: middle;
    margin-right: 20px;
}